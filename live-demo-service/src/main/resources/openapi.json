        "/health": {
            "get": {
                "summary": "System Health Check",
                "description": "Monitor de salud para K8s y Liveness Probes.",
                "operationId": "getHealth",
                "responses": {
                    "200": {
                        "description": "Sistema Operativo",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "UP"
                                        },
                                        "checks": {
                                            "type": "object",
                                            "properties": {
                                                "database": {
                                                    "type": "string",
                                                    "example": "OK"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
