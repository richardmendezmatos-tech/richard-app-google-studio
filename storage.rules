rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Inventory and general images
    match /{allPaths=**} {
      // 1. Read Access: Public (Required for storefront)
      allow read: if true;
      
      // 2. Write Access: Admins Only + Validation
      allow write: if request.auth != null && 
                   firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
                   request.resource.contentType.matches('image/.*') &&
                   request.resource.size < 10 * 1024 * 1024; // Increased to 10MB for high-res
    }
  }
}
