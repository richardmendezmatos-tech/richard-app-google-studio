
rules_version = '2';

// Copia esto en: Firebase Console -> Storage -> Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura a todo el mundo (para que los clientes vean las fotos)
    // Permitir escritura solo si el usuario est√° autenticado (Admin)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
