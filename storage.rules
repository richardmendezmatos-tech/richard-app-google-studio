rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // 1. Read Access: Public (Inventory images need to be seen)
      allow read: if true;
      
      // 2. Write Access: Admins Only + Validation
      allow write: if request.auth != null && 
                   // Must be Admin
                   firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
                   // Must be an Image
                   request.resource.contentType.matches('image/.*') &&
                   // Max Size: 5MB (5 * 1024 * 1024 = 5242880 bytes)
                   request.resource.size < 5 * 1024 * 1024;
    }
  }
}
