rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Inventory and general images
    match /{allPaths=**} {
      // 1. Read Access: Public (Required for storefront)
      allow read: if true;
      
      // 2. Write Access: Authenticated Users (Isolation Test)
      allow write: if request.auth != null && 
                   request.resource.contentType.matches('image/.*') &&
                   request.resource.size < 20 * 1024 * 1024;
    }
  }
}
