    "react-redux": "^9.2.0",
    "react-router-dom": "^7.11.0",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.5",
    "twilio": "^5.12.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
