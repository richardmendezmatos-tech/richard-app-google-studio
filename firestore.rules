rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Car Inventory: Everyone reads, only Admins write
    match /cars/{carId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User Profiles: Users can read/write their own profile
    // Prevent non-admins from setting role to 'admin' (Basic protection)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId; 
    }
    
    // Applications (Pre-qualification): Users can create, Admins can read
    match /applications/{appId} {
      allow create: if true; // Public submission
      allow read, update, delete: if isAdmin();
    }
  }
}
