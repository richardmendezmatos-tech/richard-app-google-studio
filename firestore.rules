rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Validation Functions ---
    
    function isValidCar() {
      let car = request.resource.data;
      return car.price is number && 
             car.price >= 0 &&
             car.name is string && 
             car.dealerId is string && // SaaS Requirement
             car.type in ['suv', 'sedan', 'pickup', 'luxury', 'sports', 'hybrid', 'electric']; 
    }

    function isValidLead() {
      let lead = request.resource.data;
      return lead.firstName is string && 
             lead.dealerId is string && // SaaS Requirement
             (lead.email is string || lead.phone is string);
    }

    // --- Collections ---

    // Car Inventory: Isolated by Dealer
    match /cars/{carId} {
      allow read: if true; // Temporary fix to unblock inventory listing
      allow create, delete: if isAdmin();
      allow update: if (isAdmin() && isValidCar()) || 
                    (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'leads_count']));
    }
    
    // User Profiles: Dealer-scoped (Optional enhancement)
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']))) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Applications (Leads): Strictly isolated by dealer and admin role
    match /applications/{appId} {
      allow create: if isValidLead(); 
      allow read, update, delete: if isAdmin() && 
                                    (resource == null || resource.data.dealerId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dealerId);
    }

    // --- Security Logs ---
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isValidLog(); 
      allow update, delete: if false;
    }

    match /login_attempts/{attemptId} {
      allow read: if isAdmin();
      allow create: if request.resource.data.keys().hasAll(['email', 'timestamp']);
      allow update, delete: if false; 
    }

    match /subscribers/{id} {
        allow create: if request.resource.data.email is string && request.resource.data.dealerId is string;
        allow read, update, delete: if isAdmin();
    }
  }
}
