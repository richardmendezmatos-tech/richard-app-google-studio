rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }


    // --- Validation Functions ---
    
    function isValidCar() {
      let car = request.resource.data;
      return car.price is number && 
             car.name is string && 
             car.name.size() > 0 &&
             car.type in ['suv', 'sedan', 'pickup', 'luxury'];
    }

    function isValidLead() {
      let lead = request.resource.data;
      return lead.firstName is string && 
             lead.firstName.size() > 0 &&
             (lead.email is string || lead.phone is string) &&
             lead.type in ['finance', 'trade-in', 'chat', 'general'];
    }

    // --- Collections ---

    // Car Inventory: Public Read, Admin Write (with Validation)
    match /cars/{carId} {
      allow read: if true;
      allow create, update: if isAdmin() && isValidCar();
      allow delete: if isAdmin();
    }
    
    // User Profiles: Self-manage, Admin readout
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      // Users can update their own profile, but NOT their role
      allow update: if (isOwner(userId) && 
                      (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']))) || 
                    isAdmin();
      allow delete: if isAdmin();
    }
    
    // Applications (Leads): Public Create-only, Admin Read/Write
    match /applications/{appId} {
      allow create: if isValidLead(); // Validated lead submission
      allow read, update, delete: if isAdmin();
    }

    // --- Security Logs ---
    
    // Audit Logs: Admin Read, System (Anyone attempting login) Write
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if true; // Public write needed to log failed attempts from client
      allow update, delete: if false; // Immutable logs
    }

    // Login Attempts (Rate Limiting): Public Read/Write needed for client-side throttling demo
    match /login_attempts/{attemptId} {
      allow read, write: if true; // In production this would be backend-only
    }
  }
}
