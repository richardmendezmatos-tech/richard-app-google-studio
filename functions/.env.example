GOOGLE_GENAI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# --- Security / Webhooks ---
# When true, reject webhook requests unless signature verification can succeed.
WEBHOOK_SIGNATURE_ENFORCE=false

# If your reverse proxy/hosting rewrites the webhook host, set a stable base URL
# so signature verification uses the same URL configured in providers.
# Example: https://us-central1-your-project.cloudfunctions.net
WEBHOOK_BASE_URL=

# Admin hardening for callable endpoints (triggerReindex, triggerEval)
# Comma-separated Firebase Auth UIDs (fallback if you don't use custom claims).
ADMIN_UIDS=

# SendGrid Signed Event Webhook (PEM public key)
SENDGRID_EVENT_WEBHOOK_PUBLIC_KEY=
